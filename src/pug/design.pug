block vars
  - var pageTitle = 'Дизайн и айдентика SPACECODE'
  - var customHeader = true
  - var service = true
  //- - var customBg = '/img/services-bg.png'

block header
  .g-wrapper
    .promotion
      .promotion__title Дизайн и айдентика
      .promotion__block
        .promotion__item Промышленный дизайн
        .promotion__item Веб-дизайн
        .promotion__item Дизайн приложений
        .promotion__item Айдентика
        .promotion__item 3D визуализация
        .promotion__item Дизайн интерфейсов
        .promotion__item Оформление презентаций
        .promotion__item Создание видео
      a.feedback__submit.services__scroll: span Выбрать решение

block content
  include blocks/_calc.pug
  .features
    .features__block
      .features__grid
        .features__prev
          img.features__img(src="../img/web-bg.png")
      .features__grid
        .features__title Особенности создания дизайна у нас
        .features__criteria
          .features__item
            .features__det
              img.features__icon(src="../img/features-1.png")
              .features__subtitle Креативно
            .features__text Мы разработаем уникальный дизайн и айдентику, оригинальность и качество которых станет Вашей визитной карточкой
          .features__item
            .features__det
              img.features__icon(src="../img/features-2.png")
              .features__subtitle Узнаваемо
            .features__text Создаем узнаваемые стили, работающие на компанию на любом рекламном носителе
          .features__item
            .features__det
              img.features__icon(src="../img/features-3.png")
              .features__subtitle Стильно
            .features__text Мы постоянно следим за трендами веб-дизайна, а наш опыт позволет разрабатывать простые, стильные и продающие сайты
          .features__item
            .features__det
              img.features__icon(src="../img/features-4.png")
              .features__subtitle Притягательно
            .features__text Ни один человек, взглянувщий на наши дизайнерские работы, не останется равнодушным
  .features__footer
    img(src="../img/features-footer.png").bg__features
    .g-wrapper
      .features__content
        .features__callback Закажите обратный звонок и задайте уточняющие вопросы!
        a.feedback__submit(href="#") <span>Подробнее</span>
