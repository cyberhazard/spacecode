.features
  padding 150px 0 0 0
  background-color: #17171d;
  display flex
  &__block
    display: flex
    justify-content: flex-start
    align-items: center
  &__grid
    flex-basis: 45%
    display flex
    justify-content: center
    flex-direction: column
    align-items: center
    &:nth-child(2)
      align-self: flex-start
  &__img
    width 90%
    object-fit: cover
  &__prev
    padding-top 200px
  &__criteria
    display flex
    justify-content: flex-start
    align-items: flex-start
    flex-wrap: wrap
  &__item
    flex-basis 50%
    margin-bottom 60px
  &__title
    width 100%
    color: #ffffff;
    font-family: "Gotham Pro";
    font-size: 40px;
    font-weight: 700;
    line-height: 60px;
    margin-bottom 60px
  &__subtitle
    color: #ffffff;
    font-family: "Gotham Pro";
    font-size: 28px;
    font-weight: 700;
    line-height: 60px;
    width: 90%
  &__text
    width 90%
    color: #ffffff;
    font-family: Lato;
    font-size: 16px;
    font-weight: 400;
    line-height: 28px;
  &__footer
    background: #17171d;
    height: 370px
  &__content
    display: flex
    justify-content: center
    align-items: center
    padding 100px 0 100px
  &__callback
    color: #ffffff;
    font-family: "Gotham Pro";
    font-size: 42px;
    font-weight: 700;
    line-height: 62px;
    width: 60%;
    margin-right: 50px;
