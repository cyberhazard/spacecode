.features
  padding 50px 0 0 0
  display flex
  background #17171d url('../img/stars-bg.png') no-repeat
  background-size: cover
  position: relative
  &__block
    display: flex
    justify-content: flex-start
    align-items: center
  &__det
    display flex
    align-items: center
    margin-bottom 12px
  &__grid
    flex-basis: 45%
    display flex
    justify-content: center
    flex-direction: column
    align-items: center
    &:nth-child(2)
      align-self: flex-start
  &__img
    width 90%
    object-fit: cover
  &__icon
    margin-right 14px
  &__prev
    padding-top 54px
  &__criteria
    display flex
    justify-content: flex-start
    align-items: flex-start
    flex-wrap: wrap
  &__item
    flex-basis 50%
    margin-bottom 30px
  &__title
    width 100%
    color: #ffffff;
    font-family: "Gotham Pro";
    font-size: 34px;
    font-weight: 700;
    line-height: 60px;
    margin-bottom 20px;
  &__subtitle
    color: #ffffff;
    font-family: "Gotham Pro";
    font-size: 28px;
    font-weight: 700;
    width: 90%
  &__text
    width 90%
    color: #ffffff;
    font-family: Lato;
    font-size: 16px;
    font-weight: 400;
    line-height: 28px;
  &__footer
    background #17171d
    background-size: cover
    position: relative
  &__content
    display: flex
    justify-content: center
    align-items: center
    padding 16px 0
  &__callback
    color: #ffffff;
    font-family: "Gotham Pro";
    font-size: 32px;
    font-weight: 700;
    line-height: 62px;
    width: 50%;
    margin-right: 50px;
