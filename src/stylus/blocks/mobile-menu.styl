.mobile-menu
  position fixed
  top 0
  left 0
  width 100%
  height 100vh
  background-color rgba(#101017,1)
  z-index: 12
  display flex
  flex-wrap: wrap
  padding 48px 20px 12px
  will-change: transform
  transition: .5s
  transform translateX(100%)
  &__close
    position absolute
    top 12px
    right 12px
    background-color transparent
    border none
    &:before
      content: '\f00d'
      font-family: FontAwesome
      font-size 24px
      color white
  &__col
    flex-basis: calc(100% / 12 * 6)
    flex-grow: 1
  & .navigation__link
    margin-bottom 12px
  &__social
    padding-top 20px
  & .header__phone
    margin 12px 0
    display block
  & .socialBlock
    display flex
    position static
    padding-top 32px
    justify-content center
  & .header__contacts
    text-align center

