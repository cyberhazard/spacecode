.about
  &__img
    width 100%
    object-fit: cover
    &_cubick
      width 280px
      display: block
      margin 0 auto
  &__team
    width 100%
    object-fit: cover
  &__block
    display flex
    justify-content: space-between
    align-items: center
    flex-wrap: nowrap
    margin-bottom 40px
  &__grid
    flex-basis 45%
  &__text
    color: #ffffff;
    font-family: Lato;
    font-size: 18px;
    font-weight: 400;
    line-height: 28px;
  &__title
    font-weight: bold;
    font-size: 30px
    line-height: 45px;
    font-family: GothamPro;
    margin-bottom 60px
  &__center
    text-align: center
  &__anonce
    color: #17171d;
    font-family: Lato;
    font-size: 18px;
    position: relative
    padding-left 34px
    margin-bottom 24px
    &:before
      content ""
      width 28px
      height 28px
      position: absolute
      left 0
      top -4px
      background: url('../img/check.png') no-repeat
      background-size cover


