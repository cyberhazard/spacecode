.analytics
  &__block
    display flex
    flex-wrap: wrap
    justify-content: space-between
    margin-bottom 100px
  &__item
    position: relative
    flex-basis: 30%
    margin-bottom 20px
    display flex
    flex-direction: column
    justify-content: flex-start
    padding 40px 0 40px 0
  &__title
    display flex
    justify-content: flex-start
    flex-direction: column
    align-items: center
    margin-bottom 60px
  &__name
    width 90%
    text-align: center
    color: #17171d;
    font-family: Lato;
    font-size: 24px;
    font-weight: 700;
  &__img
    width 80px
    height 80px
    object-fit: contain
    margin-bottom 36px
  &__content
    margin-bottom 40px
    p
      text-align: center
      position: relative
      color: #17171d;
      font-family: Lato;
      font-size: 16px;
      font-weight: 400;
      line-height: 28px;
  &__cost
    color: #17171d;
    font-family: Lato;
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 46px
  &__footer
    display flex
    justify-content: space-between
    align-items center
    flex-direction: column
  &__more
    display flex
    justify-content: center
    align-items center
    flex-direction: column
    &_title
      font-family: 'Gotham Pro';
      font-weight: bold
      font-size: 40px;
      margin-bottom 30px
    &_information
      color: #17171d;
      font-family: Lato;
      font-size: 30px;
      & a
        font-family: 'Gotham Pro';
        font-weight: bold
        font-size: 30px;
        color black

