.dig
  &__header
    background url(../img/dig-header.png) center center
    background-size cover
    text-align: center
    padding 74px 0px
    color white
    font-family: "Gotham Pro";
    font-size: 36px;
    font-weight: 700;
  &__title
    margin-bottom 34px
    &:last-child
      margin-bottom 0
  &__img
    margin-bottom 20px
  &__bonus
    margin-bottom 70px
    &_elements
      display flex
      justify-content: space-between
      align-items: flex-start
      flex-wrap wrap
    &_element
      flex-basis 46%
      display flex
      align-items: center
      color: #17171d;
      font-family: Lato;
      font-size: 18px;
      font-weight: 600;
      margin-bottom 16px
      & label
        width 22px
        height: 22px
        background-color: #e8e8e8;
        margin-right 20px
        display: block
        position relative
        cursor pointer
      & input
        display none
  &__content
    padding 74px 98px
    &_title
      color: #17171d;
      font-family: Lato;
      font-size: 24px;
      font-weight: 700;
      margin-bottom 30px
  &__contact
    &_header
      display flex
      justify-content: space-between
      align-items: flex-start
      flex-wrap wrap
    &_element
      flex-basis 46%
      display flex
      flex-direction: column
      position: relative
  &__input
    background: transparent
    border none
    border-bottom 3px solid #dddddd;
    padding 14px 14px
    color: #17171d;
    font-family: Lato;
    font-size: 18px;
    font-weight: 700;
    cursor pointer
    margin-bottom 40px
  &__label
    position: absolute;
    top: 14px;
    left: 16px;
    color: #bebebe;
    transition: .5s;
    pointer-events: none;
    font-family: Lato;
    font-size: 18px;
    font-weight: 700;
  &__offer
    display flex
    justify-content: center
    align-items: center
    margin-bottom 40px
    color: #bebebe;
    font-family: Lato
    font-size: 18px;
    font-weight: 600;
    & p
      text-decoration: underline
      cursor pointer
    & label
      width 22px
      height: 22px
      border: 2px solid #bebebe;
      margin-right 20px
      display: block
      position relative
      cursor pointer
    & input
      display none
      margin-right 14px

  &__center
    display flex
    justify-content: center
  &__submit
    color black

.dig__input:focus + .dig__label, .dig__input:valid + .dig__label
  top -8px
  left: 14px;
  color: #17171d;
  font-size: 14px;

.dig__bonus_element input[type='checkbox']:checked + span
  position: absolute
  left: 4px;
  top: 2px;
  width: 15px;
  height: 18px;
  cursor pointer
  background url('../img/check-ok.png') center center no-repeat
  background-size contain
.dig__offer input[type='checkbox']:checked + span
  position: absolute
  left: 2px;
  top: -1px;
  width: 15px;
  height: 19px;
  cursor pointer
  background url('../img/check-white.png') center center no-repeat
  background-size contain

@media (max-width:1300px)
  .dig
    &__content
      padding: 74px 60px;
@media (max-width:1300px)
  .dig
    &__bonus
      &_element
        flex-basis 100%
@media (max-width:780px)
  .dig
    &__header
      padding 50px 0
    &__title
      font-size 24px
    &__content
      padding 40px 30px
      &__title
        font-size 18px
    &__contact
      &_element
        flex-basis 100%
    &__bonus
      margin-bottom 30px
      &_element
        font-size 14px
    &__input
      font-size 14px
    &__label
      font-size 12px
    &__offer
      font-size 14px
@media (max-width: 540px)
  .dig
    &__submit
      margin-bottom 140px
