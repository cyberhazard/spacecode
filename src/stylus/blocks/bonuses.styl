.bonuses
  padding-bottom 74px
  &__title
    color: #17171d;
    font-family: Lato;
    font-size: 30px;
    font-weight: 700;
    line-height: 46px;
    margin-bottom 50px
  &__text
    color: #17171d;
    font-family: Lato;
    font-size: 16px;
    font-weight: 400;
    line-height: 28px;
    margin-bottom 14px
    &_bold
      font-weight: 700;
  &__table
    width 80%
    border-spacing 0
    border-bottom 1px solid #e8e8e8;
    margin-bottom 20px
    &_tr
      &:first-child
        background-color: #f7f7f7;
    &_th
      padding 18px 40px
      font-family: Lato;
      font-size: 18px;
      font-weight: 700;
      text-align: start
      & span
        color secondColor
    &_td
      padding 18px 40px
      font-family: Lato;
      font-size: 16px;
      font-weight: 400;
      border-top 1px solid #e8e8e8;
  &__attention
    font-family: Lato;
    font-size: 16px;
    font-weight: 400;
    & span
      color secondColor

@media (max-width:700px)
  .bonuses
    padding-bottom 20px
    &__table
      width 100%
    &__title
      font-size: 18px;
      line-height: 30px;
      margin-bottom 30px
    &__text
      font-size: 14px;
      line-height: 22px;
    &__table
      &_th
        font-size: 16px;
      &_td
        font-size 14px
    &__attention
      font-size: 14px;
