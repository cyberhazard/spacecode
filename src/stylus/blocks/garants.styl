.garants
  &__elements
    display flex
    justify-content space-between
    align-items flex-start
  &__element
    flex-basis 25%
    display: flex
    justify-content: center
    flex-direction: column
  &__number
    color: #f0143a;
    font-family: "Gotham Pro";
    font-size: 150px;
    font-weight: 900;
    text-align center
    position relative
    &_content
      opacity 0.25
    &:after
      content ''
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background linear-gradient(to bottom, transparent, white 55%);
  &__title
    color: #17171d;
    font-family: Lato;
    font-size: 24px;
    font-weight: 700;
    text-align center
    margin-bottom 14px
  &__text
    font-family: Lato;
    font-size: 16px;
    font-weight: 400;
    line-height: 26px;
    margin-bottom 26px
    text-align: center
  &__content
    z-index 1
    transform: translateY(-66px);
  &__offer
    display flex
    align-items: center
    justify-content: center
    font-family: Lato;
    font-size: 18px;
    font-weight: 700;
    line-height: 26px;
    color: #17171d;
    text-align: center
    cursor: pointer
    margin-bottom 50px
    &_text
      position relative
      &:after
        content ''
        position: absolute
        width: 100%
        height: 1px
        border-bottom 1px dashed black
        bottom 0
        left 0
  &__img
    margin-right 10px
  &__ps
    color: #6f6f6f;
    font-family: Lato;
    font-size: 14px;
    font-weight: 400;
    line-height: 21px;
    font-weight: 400;
    text-align: center

@media (max-width:700px)
  .garants
    &__elements
      flex-wrap wrap
    &__element
      flex-basis 100%
    &__number
      font-size 100px
    &__title
      font-size 18px
    &__text
      font-size 14px
      margin-bottom 10px
    &__offer
      margin-bottom 16px
      &_text
        font-size 16px
    &__ps
      font-size 12px

