.feedback
  padding 100px 0 80px 0
  background #17171d url('../img/feedback-bg.png') no-repeat
  background-size: cover
  &__block
    display flex
    justify-content: space-between
  &__grid
    flex-basis 40%
    display flex
    justify-content: center
    align-items: center
    flex-direction: column
    &:nth-child(2)
      align-self: flex-start
  &__anonce
    width: 80%;
    color: #fff;
    font-family: Lato;
    line-height: 28px;
    font-size: 20px;
    font-weight: 700;
    margin-bottom: 100px;
    align-self: flex-start
    & span
      display: block
      font-family: Lato;
      line-height: 28px;
      font-size: 20px;
      font-weight: 400
      color darkgrey
      margin-bottom 12px
  &__input
    position: relative
    display: block
    width 100%
    color: #656574;
    font-family: Lato;
    font-size: 18px;
    margin-bottom 60px
    background: transparent
    border 0px solid
    border-bottom 3px solid #656574;
    padding-bottom: 6px;
    transition 0.3s
    cursor: pointer
    &:after
      content ''
      position: absolute
      width 100%
      border-bottom 4px solid #3c3c49
      bottom 0
      left 0
    &:focus
      border-bottom 3px solid secondColor
    &:hover
      border-bottom 3px solid secondColor
  &__title
    color: #ffffff;
    font-family: Lato;
    font-size: 24px;
    margin-bottom 84px
  &__submit
    position relative
    color: #ffffff;
    font-family: Lato;
    font-size: 16px;
    padding: 14px 60px 14px 40px;
    border: 2px solid secondColor;
    display: inline-block
    background-color transparent
    overflow hidden
    cursor: pointer
    &_black
      color #17171d
    &:after
      position absolute
      content "\f105"
      right: 40px;
      top: 13px;
      font-size 24px
      font-family: FontAwesome
    &:before
      content: '';
      z-index: 0;
      position: absolute;
      top: -30px;
      left: -40px;
      width: 30px;
      height: 118px;
      background-color: #f0143a;
      border-radius: 50%;
      -webkit-transition: 0.5s;
      transition: 0.5s;
    & span
      position relative
      z-index 1
    &:hover:before
      width 450px


