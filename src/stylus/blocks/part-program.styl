.part-program
  padding 74px 0 140px 0
  &__title
    color: #17171d;
    font-family: "Gotham Pro";
    font-size: 46px;
    font-weight: 700;
    line-height: 60px;
    text-align: center
    margin-bottom 74px
  &__content
    display flex
    justify-content: space-between
    align-items: flex-start
    flex-wrap wrap
  &__item
    flex-basis 48%
    margin-bottom 60px
  &__about
    font-family: Lato;
    font-size: 30px;
    font-weight: 700;
    line-height: 36px;
    margin-bottom 28px
  &__elements
    display flex
    justify-content: space-between
    align-items: flex-start
    flex-wrap wrap
  &__element
    display flex
    align-items: flex-start
    justify-content: flex-start
    flex-basis 50%
    font-family: Lato
    font-size: 16px;
    font-weight: 600;
    letter-spacing: 0.32px;
    color black
    margin-bottom 20px
    & i
      color secondColor
      margin-right 10px
  &__img
    height: 76px
    margin-bottom 20px

@media (max-width:700px)
  .part-program
    padding-bottom 60px
    &__title
      font-size: 24px;
      line-height: 36px;
      text-align: start
      margin-bottom 40px
    &__content
      display block
    &__img
      height: 64px
    &__about
      font-size: 18px;
      margin-bottom 18px
    &__elements
      display block
    &__element
      margin-bottom 14px
    &__text
      font-size: 14px;
    &__item
      margin-bottom 44px
