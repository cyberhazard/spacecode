.modal
  &__wrapper
    display flex
    justify-content: space-between
    align-items: center
    flex-wrap: wrap
  &__grid
    flex-basis 46%
    display: flex
    flex-direction: column
    justify-content: flex-start
    align-items: flex-start
    margin-right 60px
    &:last-child
      margin-right: 0
  &__elem
    display flex
    flex-direction: column
    align-items: flex-start
    justify-content: center
    margin-bottom 40px
    color white
  &__title
    font-size: 40px;
    font-family: 'Gotham Pro';
    font-weight: 700
    color white
    margin-bottom 60px
    line-height: 48px;
  &__subtitle
    margin-bottom: 10px;
    font-size: 24px;
    font-family: 'Lato'
    font-weight: 700
  &__text
    font-size: 18px;
    font-family: 'Lato'
    font-weight: 400
  &__site
    color: white;
    font-size: 22px;
    font-family: 'Lato'
    font-weight: 400
    align-self: center
  &__link
    text-decoration: none;
    border-bottom: 1px dotted white;
    color: white;
    font-family: LatoBold;
    color: white;
    font-size: 22px;
    font-family: 'Lato'
    transition 0.3s
    margin-left 4px
    &:hover
      color secondColor
      border-bottom: 1px dotted secondColor;
  &__img
    width 430px
    height: 330px
    object-fit: cover
    display: block
    margin 0 auto
  &__imgwrap
    margin-bottom 20px

.tingle-modal-box__content
  background: #1c1c24

