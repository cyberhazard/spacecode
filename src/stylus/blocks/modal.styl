.modal
  &__wrapper
    display flex
    justify-content: space-between
    align-items: center
    flex-wrap: nowrap
  &__grid
    flex-basis 66%
    display: flex
    flex-direction: column
    justify-content: flex-start
    align-items: flex-start
    margin-right 60px
    &:last-child
      margin-right: 0
    &_basis
      flex-basis 60%
  &__elem
    display flex
    flex-direction: column
    align-items: flex-start
    justify-content: center
    margin-bottom 40px
    color white
  &__title
    font-size: 40px;
    font-family: 'Gotham Pro';
    font-weight: 700
    color white
    margin-bottom 60px
    line-height: 48px;
  &__subtitle
    margin-bottom: 10px;
    font-size: 24px;
    font-family: 'Lato'
    font-weight: 700
    color white
  &__text
    font-size: 18px;
    font-family: 'Lato'
    font-weight: 400
    color white
    position relative
    &_plus
      padding-left 30px
      margin-bottom 14px
      &:before
        content '\f067'
        font-family FontAwesome
        font-size 18px
        position absolute
        left 0
        bottom 0
        color secondColor
  &__site
    color: white;
    font-size: 22px;
    font-family: 'Lato'
    font-weight: 400
    align-self: center
  &__link
    text-decoration: none;
    border-bottom: 1px dotted white;
    color: white;
    font-family: LatoBold;
    color: white;
    font-size: 22px;
    font-family: 'Lato'
    transition 0.3s
    margin-left 4px
    &:hover
      color secondColor
      border-bottom: 1px dotted secondColor;
  &__img
    width 100%
    //height: 330px
    object-fit: cover
    display: block
    margin 0 auto
  &__imgwrap
    margin-bottom 20px
  &__wraps
    border-bottom 1px solid #393946
    margin-bottom 44px



