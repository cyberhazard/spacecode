.offer-popup
  position fixed
  top 0
  left 0
  width 100%
  height 100vh
  background-image: linear-gradient(to left,rgba(black,.76),rgba(138,16,58,.76));
  display none
  justify-content center
  align-items center
  transition .5s
  opacity 0
  z-index 1000
  &__content
    max-width: 600px;
    padding 64px 80px
    margin 0 20px;
    background-color white
    position relative
    transition: .5s;
    transform: translateY(-140px)
    opacity 0
    &_show
      opacity 1
      transform translateY(0)
  &__close
    position absolute
    top 12px
    right 12px
    cursor pointer
    &:after
      content '\f00d'
      color secondColor
      font-family FontAwesome
      font-size 30px;
  &__header
    text-align: center;
    color: black;
    font-family: "Gotham Pro";
    font-size: 36px;
    font-weight: 700;
    margin-bottom:24px;
  &__text
    font-family: Lato;
    font-size: 18px;
    font-weight: 400;
    line-height: 26px;
    text-align: center;
@media (max-width:700px)
  .offer-popup
    &__header
      font-size 28px
    &__text
      font-size: 14px

@media (max-width:524px)
  .offer-popup
    &__content
      padding 32px 40px

