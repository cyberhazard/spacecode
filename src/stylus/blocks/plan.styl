.plan
  margin-bottom 180px
  &__shadow-text
    width: 75%
    margin-bottom 70px
  &__content
    display flex
    justify-content: space-between
    align-items: flex-start
    margin-bottom 60px
  &__img
    margin-bottom 26px
  &__item
    padding 44px 30px
    display flex
    flex-direction: column
    align-items: center
    flex-basis 30%
    cursor pointer
    transition 0.35s
    &:hover
      box-shadow: 0 12px 26px rgba(0, 0, 0, 0.14);
  &__time
    color: #17171d;
    font-family: Lato;
    font-size: 24px;
    font-weight: 700;
    margin-bottom 50px
    position: relative
    &:after
      content ''
      width 48px
      height 14px
      bottom: -36px;
      left: 36px;
      position: absolute
      background: url('../img/particle-red.png') center center no-repeat
      background-size cover
  &__text
    color: #17171d;
    font-family: Lato;
    font-size: 16px;
    font-weight: 400;
    line-height: 26px;
    text-align: center
  &__attention
    padding 40px 124px
    color: #17171d;
    font-family: Lato;
    font-size: 24px;
    font-weight: 700;
    line-height: 34px;
    text-align: center
    border: 2px solid #f0143a;
    position relative
    &:after
      content ''
      position absolute
      height: calc(100% + 26px);
      width: calc(100% + 26px);
      top: 0;
      left: 0;
      z-index: -1;
      transform: translate(-16px, -16px);
      border 4px solid #f0143a
