.menu
  display flex
  z-index 10
  &__item
    margin-right 30px
    position relative
    white-space: nowrap
    &:before
      content ''
      position absolute
      top calc(100% + 4px)
      left 0
      height 2px
      width 0%
      background-color secondColor
      transition .3s
    &:last-child
      margin-right: 0
    &:hover:before
      width 100%
    &_drop
      cursor:  pointer
      margin-right 38px
      &:hover ^[0]__submenu
        opacity 1
        top 100%
        transform: translateY(0)
      &:after
        content ''
        width 8px
        height 7px
        background: url(/img/trinagle.png) no-repeat
        background-size cover
        position: absolute
        top 9px
        right -12px
      &:before
        display none
    &_active
      &:before
        content ''
        display: block
        position absolute
        top calc(100% + 4px)
        left 0
        height 2px
        width 100%
        background-color secondColor
        transition .3s
  &__submenu
    border-top: 8px solid transparent
    position absolute
    top 0%
    left 0
    opacity 0
    transform: translateY(-9999px)
    display flex
    flex-direction: column
    transition: top .5s, opacity 0.5s
    background-color: rgba(#292732,1);
    background-clip: padding-box
    padding: 12px 44px 28px 28px;
    z-index: 10
    display: flex
    justify-content: flex-start
    flex-direction: column
    align-items: flex-start
    & ^[0]__link:hover
      color secondColor
    & ^[0]__link
      color: white
  &__link
    font-family: Lato;
    font-size: 16px;
    color: #aaaab2;
    white-space: nowrap
    transition: .3s
    &_margin
      position: relative
      margin-top 12px
    &:hover
      color: white
.menu__link_margin span:after
  content "\f105"
  font-family: FontAwesome
  font-size: 16px
  position: absolute
  top 3px
  right -14px
