.menu
  display flex
  &__item
    margin-right 30px
    position relative
    &:before
      content ''
      position absolute
      top calc(100% + 4px)
      left 0
      height 2px
      width 0%
      background-color secondColor
      transition .3s
    &:last-child
      margin-right: 0
    &:hover:before
      width 100%
  &__link
    font-family: Lato;
    font-size: 16px;
    color: #aaaab2;
    white-space: nowrap
    transition: .3s
    &:hover
      color: white
