.portfolio
  padding-top 120px
  &__content
    padding: 54px 0px 0px 40px;
  &__mobile
    display none
  &__select
    display block
    width 100%
    border: none;
    height: 42px;
    font-size: 24px;
  &__header
    color: #ffffff;
    font-family: "Gotham Pro";
    font-size: 60px;
    font-weight: 700;
    text-transform: uppercase;
  &__top
    text-align center
    width 100%
  &_min &__block:nth-child(n+6)
    display none
  &_min &__block:last-child
    display flex
  &__buttons
    display flex
    flex-wrap: wrap
    margin-bottom 60px
  &__button
    border none
    background-color transparent
    margin 0 60px 38px 0
    color: #b2b2bd;
    font-family: Lato;
    font-size: 24px;
    font-weight: 400;
    cursor: pointer
    user-select none
    transition .3s
    &_selected
      position relative
      color: #17171d;
      &:after
        content: ''
        position absolute
        top calc(100% + 4px)
        left 0
        height 4px
        width 100%
        background-color secondColor
    &:hover
      color: #17171d;
  &__blocks
    display flex
    flex-wrap: wrap
  &__block
    display flex
    align-items: center
    flex-basis: 50%
    flex-grow: 1
    height 589px
    position relative
    overflow hidden
    //padding-left 2%
    &:last-child
      display none
    &_last
      justify-content:  center
    &:hover ^[0]__image
      transform scale(1.1)
  &__float
    position absolute
    top 68px
    left 0
    padding 10px 29px 10px 40px
    background-color secondColor
    color: #ffffff;
    font-family: Lato;
    font-size: 20px;
    font-weight: 600;
  &__more
    color: #17171d;
    font-family: "Gotham Pro";
    font-size: 40px;
    font-weight: 700;
    border-bottom 4px solid secondColor
    &:after
      content: '\f105'
      font-family: FontAwesome
      color secondColor
      margin-left 18px
      position relative
      top 2px
  &__image
    position absolute
    top 0
    left 0
    z-index -1
    background-position: center center
    background-repeat: no-repeat
    background-size: cover
    width 100%
    height 104%
    transform-origin: center center
    transition: 2s
  &__header
    color: #ffffff;
    font-family: "Gotham Pro";
    font-size: 60px;
    font-weight: 700;
    text-transform: uppercase;
    &_min
      font-family: "Gotham Pro";
      color: #ffffff;
      font-weight: 700;
      text-transform: uppercase;
    &_dark
      color: #17171d;
  &__text
    color: #ffffff;
    font-family: Lato;
    font-size: 24px;
    font-weight: 400;
    padding 30px 0 40px
    &_dark
      color: #17171d;
