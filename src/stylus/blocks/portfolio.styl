.portfolio
  padding-top 70px
  &__buttons
    display flex
    flex-wrap: wrap
  &__button
    border none
    background-color transparent
    margin 0 60px 38px 0
    color: #b2b2bd;
    font-family: Lato;
    font-size: 24px;
    font-weight: 400;
    cursor: pointer
    user-select none
    transition .3s
    &_selected
      position relative
      &:after
        content: ''
        position absolute
        top calc(100% + 4px)
        left 0
        height 4px
        width 100%
        background-color secondColor
    &:hover
      color: #17171d;
  &__blocks
    display flex
    flex-wrap: wrap
  &__block
    flex-basis: 50%
    flex-grow: 1
    height 588px
    position relative
    overflow hidden
    &:hover ^[0]__image
      transform scale(1.1)
  &__image
    position absolute
    top 0
    left 0
    z-index -1
    background-position: center center
    background-repeat: no-repeat
    background-size: cover
    width 100%
    height 100%
    transform-origin: center center
    transition: .8s
