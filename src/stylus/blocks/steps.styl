.steps
  padding 192px 0 164px 0
  &__content
    display inline-block
    position relative
  &__step
    display flex
    align-items: center
    position absolute
    top 80%
    left 0
    &_1
      top -10%
      left 5%
    &_2
      top 14%
      left 75%
    &_3
      top 40%
      left 0
    &_4
      left 75%
      top 66%
    &_5
      left 0
      top 93%
  &__description
    width: 350px
  &__header
    color: #17171d;
    font-family: "Gotham Pro";
    font-size: 34px;
    font-weight: 700;
  &__text
    color: #17171d;
    font-family: Lato;
    font-size: 18px;
    font-weight: 400;
    line-height: 30px;
  &__number
    padding-top 20px
    font-family: "Gotham Pro";
    font-size: 140px;
    font-weight: 900;
    padding 0 15px 0 5px
    &_1
      color: #6f6f79;
    &_2
      color: #550644;
    &_3
      color: #20475a;
    &_4
      color: #414143;
    &_5
      color: #6d5e4e;
