.promotion
  text-align center
  &__title
    color: #ffffff;
    font-family: "Gotham Pro";
    font-size: 52px;
    font-weight: 700;
    text-transform: uppercase;
    text-align center
  &__block
    display flex
    flex-wrap: wrap
    justify-content: space-between
    text-align left
    margin 56px 0
  &__item
    flex-basis: 50%
    color: #ffffff;
    font-family: Lato;
    font-size: 18px;
    font-weight: 600;
    padding-left 18%
    margin-bottom 24px
    &:before
      content '\f00c'
      font-family: FontAwesome
      color secondColor
      padding-right 4px
