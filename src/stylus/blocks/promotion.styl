.promotion
  text-align center
  &__title
    color: #ffffff;
    font-family: "Gotham Pro";
    font-size: 60px;
    font-weight: 700;
    text-transform: uppercase;
    text-align center
    line-height: 74px
    &_land
      text-align left
      text-transform none
      font-size 46px
      line-height 54px
      margin-bottom 38px
  &__descript
    font-size 24px
    text-align left
    font-weight 400
    line-height 34px
    font-family: 'Lato';
  &__block
    display flex
    flex-wrap: wrap
    justify-content: space-between
    text-align left
    margin 56px 0 68px 0
  &__item
    flex-basis: 50%
    color: #ffffff;
    font-family: Lato;
    font-size: 18px;
    font-weight: 600;
    padding-left 14%
    margin-bottom 24px
    &_full
      padding-left 0
      flex-basis 100%
      font-weight 400
    &:before
      content '\f00c'
      font-family: FontAwesome
      color secondColor
      padding-right 4px
      margin-right 16px
