.made
  padding 140px 0 0px 0
  background url('../img/portfolio-bg.png') no-repeat
  background-size: cover
  &__block
    display flex
    justify-content: space-between
    align-items: center
    flex-wrap wrap
    margin-bottom 60px
  &__item
    flex-basis 30%
    display flex
    flex-direction: column
    align-items: center
    justify-content: center
    margin-bottom 60px
  &__description
    color: #78787f;
    font-family: Lato;
    font-size: 18px;
    font-weight: 400;
    margin-bottom 16px
  &__name
    color: #17171d;
    font-family: Lato;
    font-size: 24px;
    font-weight: 700;
    text-transform: uppercase;
  &__wrap
    position relative
    margin-bottom 32px
  &__img
    border-radius 50%
    width 344px
    height 344px
    object-fit: cover
  &__cover
    position: absolute
    background: rgba(black,0.75)
    top 0
    left 0
    width 100%
    height 100%
    border-radius: 50%
    display: flex
    justify-content: center
    align-items: center
  &__footer
    display flex
    justify-content: center
    align-items: center

