.faq
  padding-bottom 100px
  &__content
    display flex
    justify-content: space-between
    align-items: flex-start
    flex-wrap wrap
    margin-bottom 20px
  &__item
    flex-basis 46%
    margin-bottom 44px
  &__title
    font-family: Lato;
    font-size: 24px;
    font-weight: 700;
    line-height: 28px;
    margin-bottom 24px
  &__text
    font-family: Lato;
    font-size: 16px;
    font-weight: 400;
    line-height: 28px;
@media (max-width:700px)
  .faq
    &__content
      display block
    &__title
      font-size: 18px;
      line-height: 30px;
      margin-bottom 14px
    &__text
      font-size: 14px;
      line-height: 22px;
    &__item
      margin-bottom: 24px;
