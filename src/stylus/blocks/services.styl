.services
  background #17171d url('../img/serv-ind-bg.png') no-repeat
  background-size cover
  background-position: 0px -210px;
  padding-bottom 300px
  padding-top 160px
  &__block
    display flex
    flex-wrap: wrap;
    justify-content: space-between;
  &__item
    position relative
    flex-basis: 30%;
    height: 275px;
    margin: 0 0 100px 0;
    z-index 2
  &__title
    display: block
    color: #ffffff;
    font-family: Lato;
    width 82%
    font-size: 26px;
    padding-top 60px
    margin-bottom: 76px
  &__img
    position: absolute
    top 0
    left 80px
    z-index -1
    opacity 0.4
    transition 0.3s
    cursor: pointer

.services__item:hover .services__img
  opacity 0.2
