.part
  &__form
    display: flex
    flex-direction: column
    align-items: center
    justify-content: flex-start
  &__item
    margin-bottom 36px
    position: relative
  &__input
    width 400px
    background: transparent
    border none
    border-bottom 3px solid #3c3c49
    padding 16px 16px
    color: #ffffff;
    font-family: Lato;
    font-size: 18px;
    font-weight: 700;
  &__label
    position: absolute;
    top: 16px;
    left: 18px;
    color: #656574;
    transition: .5s;
    pointer-events: none;
    font-family: Lato;
    font-size: 18px;
    font-weight: 700;

.part__input:focus + .part__label, .part__input:valid + .part__label
  top -6px
  color: #ffffff;
  font-size: 14px;
