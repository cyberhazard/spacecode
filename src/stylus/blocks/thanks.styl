.thanks
  padding 80px 0 80px 0
  background #17171d url('../img/team-bg.png') no-repeat
  background-size: cover
.reviews
  &-slider
    width 100%
    overflow hidden
    position relative
    & img
      height 400px
      display block
      margin 0 auto
  &-pagination
    display flex
    justify-content: center
    margin-top 40px
    margin-bottom: 40px
    & .swiper-pagination-bullet
      height 16px
      width 16px
      background: url(/img/pag.png) center center no-repeat;
    & .swiper-pagination-bullet-active
      background: url(/img/pag-act.png) center center no-repeat;
