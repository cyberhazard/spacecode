@media (max-width:1300px)
  .header__top
    padding: 28px 8px 0
@media (max-width:1200px)
  .g-wrapper
    width 100%
  .shadow-text
    margin-left 50px
  .menu
    width 100%
    justify-content: center
    margin 12px 0 20px
    &__submenu
      background-color rgba(41,39,50,1)
  .header
    &__top
      flex-wrap: wrap
      justify-content: center
    &__about
      margin 0 10%
    &__title, &__text
      width 100%
  .services
    &__item
      flex-basis: 50%
      padding-left: 50px
    &__title
      width 100%
  .portfolio
    &__buttons
      padding 0 8px
    &__more
      white-space: nowrap;
      font-size: 20px;
    &__header
      font-size 30px
    &__text
      font-size 15px
  .team
    padding 100px 0 0 0
    &__block
      flex-wrap: wrap
    &__post
      margin-bottom 20px
    &__img
      margin-bottom 20px
    &__person
      flex-basis: 100%
      margin-right 0
      margin-bottom 60px
  .clients
    &__item
      flex-basis: 50%
  .blog
    &__block
      flex-wrap: wrap
    &__item
      flex-basis: 100%
      padding 12px
      margin-bottom 40px
      margin-right 0
  .feedback
    &__block
      flex-direction: column
      justify-content: center
      align-items: center
    &__grid
      width 100%
      text-align center
    &__anonce
      width 100%
    &__form
      width 80%
  .link__more_pdf
    display: block;
    margin: 0 auto 34px;
  .navigation
    padding 0 12px
    &__col
      flex-basis: auto
      margin-right 38px
  .about
    &__block
      flex-direction: column
    &__grid
      padding 0 12px
      margin-bottom 20px
  .calc__footer img
    display none
  .analytics__block
    flex-wrap: wrap
  .prices__footer
    flex-wrap: wrap;
    justify-content: center;
  .feedback__item
    width 100%
  .feedback__name, .feedback__text
    margin 0 auto
  .feedback__name
    margin-bottom 12px
  .feedback__name:after
    width 100%
    bottom -4px
  .analytics
    &__item
      flex-basis: 50%
  .prices
    padding 100px 12px 100px 12px
    &:nth-child(n+2)
      padding 0 12px 100px 12px
  .features
    &__grid
      flex-basis: 100%
      padding 0 12px
      &:first-child
        display none
  .made
    &__block
      padding 0 12px
  .steps
    &__image
      display none
    &__content
      display flex
      flex-direction: column
      justify-content: center
      align-items: center
      padding 0 12px
    &__planet
      display none
    &__number_1
      padding-left 30px
    &__step
      width 100%
      position static
      & .steps__description
        width 100%
  .calc
    padding-left 12px
    padding-right 12px
    &__col
      flex-basis: calc(100% / 12 * 6)
  .services
    padding-top 100px
  .thanks
    padding 100px 0 100px 0
@media (max-width: 700px)
  .wrapper
    width 100%
    overflow-x: hidden
  .shadow-text
    font-size 34px
    &:before
      font-size 34px
  .header
    &__top
      display none
    &__title
      font-size 32px
    &__text
      font-size 16px
  .services__item
    flex-basis: 100%
  .portfolio
    &__block
      flex-basis: 100%
      height 270px
    &__float
      top 0
    &__button
      margin 0 20px 15px 0
    &__header
      font-size: 26px
    &__text
      font-size: 12px
  .clients__item
    flex-basis: 100%
  .promotion
    &__block
      flex-wrap: wrap
    &__item
      flex-basis: 100%
  .navigation
    flex-wrap wrap
    &__col
      flex-basis: 50%;
      margin-right 0
      &:last-child
        flex-basis: 100%;
  .about__grid img
    width 100%
  .analytics__item
    flex-basis: 100%
  .features
    &__item
      flex-basis: 100%
    &__footer
      height: auto
    &__callback
      margin 0 0 20px 0
    &__content
      flex-wrap: wrap
  .made__block
    justify-content: center
  .prices
    &__block
      justify-content: center
  .software
    &__skill
      flex-basis: 100%
    &__footer
      flex-wrap: wrap
  .calc
    &__col
      flex-basis: calc(100% / 12 * 12)
  .feedback
    &__block
      display block
  .clients, .blog
    background-size inherit



