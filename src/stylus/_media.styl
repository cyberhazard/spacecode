@media (max-width:1300px)
  .header__top
    padding: 28px 8px 0
@media (max-width:1200px)
  .g-wrapper
    width 100%
  .shadow-text
    margin-left 50px
  .menu
    width 100%
    justify-content: center
    margin 12px 0
  .header
    &__top
      flex-wrap: wrap
      justify-content: center
    &__about
      margin 0 10%
    &__title, &__text
      width 100%
  .services
    &__item
      flex-basis: 50%
      padding-left: 50px
    &__title
      width 100%
  .portfolio
    &__buttons
      padding 0 8px
    &__more
      white-space: nowrap;
      font-size: 20px;
    &__header
      font-size 30px
    &__text
      font-size 15px
  .team
    &__block
      flex-wrap: wrap
    &__person
      flex-basis: 100%
  .clients
    &__item
      flex-basis: 50%
  .blog
    &__block
      flex-wrap: wrap
    &__item
      flex-basis: 100%
      padding 12px
  .feedback
    &__block
      flex-direction: column
      justify-content: center
      align-items: center
    &__grid
      width 100%
      text-align center
    &__anonce
      width 100%
    &__form
      width 80%
  .link__more_pdf
    display: block;
    margin: 0 auto 34px;
  .navigation
    padding 0 12px
    &__col
      flex-basis: auto
      margin-right 38px
  .about
    &__block
      flex-direction: column
    &__grid
      padding 0 12px
  .calc__footer img
    display none
  .analytics__block
    flex-wrap: wrap
  .prices__footer
    flex-wrap: wrap;
    justify-content: center;
  .feedback__item
    width 100%
  .feedback__name, .feedback__text
    margin 0 auto
  .feedback__name
    margin-bottom 12px
  .feedback__name:after
    width 100%
    bottom -4px
