.shadow-text
  color: #17171d;
  font-family: "Gotham Pro";
  font-size: 46px;
  font-weight: 700;
  position relative
  z-index 0
  margin-bottom 100px
  &:before
    content attr(data-text)
    position absolute
    top -42px
    left 26px
    opacity: 0.08;
    color: #212121;
    font-family: "Gotham Pro";
    font-size: 80px;
    font-weight: 700;
  &:after
    content: '';
    position absolute
    top -2px
    left -36px
    width 20px
    height 20px
    border-radius 50%
    box-shadow: 0 0 24px rgba(23, 23, 29, 0.5);
    background-color: #393946;
  &_light
    color white
    &:before
      opacity: 0.05;
      color: #ffffff;
    &:after
      box-shadow: 0 0 25px rgba(201, 204, 222, 0.7);
      background-color: #9092a0;
